---

<header class="sticky top-0 z-40 bg-white/80 backdrop-blur-sm border-b border-gray-200">
  <nav class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="text-xl font-bold text-black hover:text-gray-600 transition-colors">
          Muhammad Yusuf Blog
        </a>
      </div>
      
      <!-- Navigation Links -->
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-8">
          <a href="/" class="text-gray-900 hover:text-gray-600 px-3 py-2 text-sm font-medium transition-colors">
            Home
          </a>
          <a href="/search" class="text-gray-900 hover:text-gray-600 px-3 py-2 text-sm font-medium transition-colors">
            Search
          </a>
          <a href="/about" class="text-gray-900 hover:text-gray-600 px-3 py-2 text-sm font-medium transition-colors">
            About
          </a>
        </div>
      </div>
      
      <!-- Mobile Menu -->
      <div class="flex items-center space-x-4">
        <!-- Mobile menu button -->
        <div class="md:hidden">
          <button 
            type="button" 
            id="mobile-menu-button"
            class="p-2 rounded-md text-gray-900 hover:bg-gray-100 transition-colors"
            aria-expanded="false"
          >
            <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
      </div>
    </div>
    
    <!-- Mobile menu -->
    <div class="md:hidden hidden" id="mobile-menu">
      <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 border-t border-gray-200">
        <a href="/" class="text-gray-900 hover:text-gray-600 block px-3 py-2 text-base font-medium transition-colors">
          Home
        </a>
        <a href="/search" class="text-gray-900 hover:text-gray-600 block px-3 py-2 text-base font-medium transition-colors">
          Search
        </a>
        <a href="/about" class="text-gray-900 hover:text-gray-600 block px-3 py-2 text-base font-medium transition-colors">
          About
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  // Mobile menu functionality
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
