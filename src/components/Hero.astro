<section class="relative py-20 sm:py-32">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <!-- Main Heading -->
      <h1 class="text-4xl sm:text-6xl font-bold text-black mb-6 tracking-tight">
        Minimal Blog
      </h1>
      
      <!-- Tagline -->
      <p class="text-xl sm:text-2xl text-gray-600 mb-8 max-w-3xl mx-auto leading-relaxed">
        Thoughts on design, development, and the beauty of simplicity.
        <br class="hidden sm:block" />
        Less noise, more signal.
      </p>
      
      <!-- CTA -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a 
          href="#posts" 
          class="inline-flex items-center px-6 py-3 border border-black text-base font-medium text-black hover:bg-black hover:text-white transition-all duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-black"
        >
          Read the Blog
        </a>
        <a 
          href="/about" 
          class="inline-flex items-center px-6 py-3 text-base font-medium text-gray-600 hover:text-black transition-colors duration-200"
        >
          About Me
        </a>
      </div>
    </div>
  </div>
  
  <!-- Subtle background decoration -->
  <div class="absolute inset-0 -z-10 overflow-hidden">
    <div class="absolute left-1/2 top-0 ml-[-38rem] h-[25rem] w-[81.25rem] transform-gpu blur-3xl">
      <div class="aspect-[1097/845] w-full bg-gradient-to-tr from-gray-100 to-gray-50 opacity-20"></div>
    </div>
  </div>
</section>